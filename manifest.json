{
  "manifest_version": 2,

  "name": "Block WebPages",
  "description": "This extension blocks your access to certain webpages!",
  "version": "1.0",

  "content_scripts": [
		{
			"matches": ["http://*/*","https://*/*"],
			"js": [
				"/jquery-2.1.1.min.js", "content.js"
			]
		}
	],

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "background",
    "https://*/*",
    "http://*/*",
    "http://localhost/*",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "<all_urls>",
    "activeTab",
    "tabs"
  ]
}

